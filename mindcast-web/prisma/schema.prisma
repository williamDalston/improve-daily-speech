// MindCast Database Schema
// Using Prisma with PostgreSQL (Vercel Postgres / Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // For migrations (uncomment for Vercel/Neon)
}

