// REFLECT MODEL (Sovereign Mind analysis)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model Reflect {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  episodeId String?  @map("episode_id") // Optional - can reflect on episodes or standalone situations
  createdAt DateTime @default(now()) @map("created_at")

  // Analysis content
  situation String  @db.Text // The situation/question being analyzed
  analysis  String  @db.Text // The AI-generated analysis
  lenses    String  // Comma-separated lenses used (stoic, socratic, systems, creative, shadow)

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode? @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([episodeId])
  @@map("reflects")
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// PLAYLIST MODEL (Curated collections)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model Playlist {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Content
  name        String
  description String?
  coverEmoji  String? @default("ğŸ“š") @map("cover_emoji")
  isPublic    Boolean @default(false) @map("is_public")

  // Listening progress
  lastPlayedAt    DateTime? @map("last_played_at")
  lastEpisodeId   String?   @map("last_episode_id")
  lastPositionSec Int?      @map("last_position_sec")

  // Relations
  user     User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  episodes PlaylistEpisode[]

  @@index([userId, createdAt])
  @@map("playlists")
}

model PlaylistEpisode {
  id         String   @id @default(cuid())
  playlistId String   @map("playlist_id")
  episodeId  String   @map("episode_id")
  position   Int      @default(0) // Order in playlist
  addedAt    DateTime @default(now()) @map("added_at")

  // Relations
  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  episode  Episode  @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@unique([playlistId, episodeId])
  @@index([playlistId, position])
  @@map("playlist_episodes")
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// EPISODE REVIEW MODEL (Spaced Repetition tracking)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model EpisodeReview {
  id        String   @id @default(cuid())
  episodeId String   @map("episode_id")
  createdAt DateTime @default(now()) @map("created_at")

  // Review data
  quality     Int      // 1-5 rating of recall quality
  quizScore   Int?     @map("quiz_score") // Quiz score if taken (0-100)
  timeTaken   Int?     @map("time_taken") // Seconds spent reviewing

  // Relations
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([episodeId, createdAt])
  @@map("episode_reviews")
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// CANON PROTOCOL â€” Topic, Signals, Metrics, Remastering
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model Topic {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Content
  slug          String  @unique                // URL-safe normalized topic key
  title         String                         // Display title
  description   String? @db.Text               // AI-generated description

  // Embedding for similarity search (deferred pgvector â€” stored as JSON float array)
  embedding      Json?                         // Float[] for cosine similarity
  embeddingModel String? @map("embedding_model") // e.g. "text-embedding-3-small"

  // Status & lifecycle
  status TopicStatus @default(CANDIDATE)

  // Signal counters (denormalized for fast reads, synced from TopicRequest)
  requestCount   Int   @default(0) @map("request_count")
  uniqueUsers    Int   @default(0) @map("unique_users")
  completionRate Float @default(0) @map("completion_rate") // Median 0..1
  saveRate       Float @default(0) @map("save_rate")       // % who save

  // Canon promotion
  canonScore      Float?    @map("canon_score")        // Composite quality score
  canonEpisodeId  String?   @unique @map("canon_episode_id")
  canonPromotedAt DateTime? @map("canon_promoted_at")

  // Lifecycle policy
  isFastMoving Boolean @default(false) @map("is_fast_moving")
  canonTTLDays Int?    @map("canon_ttl_days") // TTL for fast-moving topics

  // Relations
  canonEpisode Episode?          @relation("CanonEpisodeOfTopic", fields: [canonEpisodeId], references: [id], onDelete: SetNull)
  episodes     Episode[]         @relation("EpisodeToTopic")
  requests     TopicRequest[]
  supportFlags SupportFlag[]
  dailyMetrics TopicMetricDaily[]
  canonJobs    CanonJob[]

  @@index([status])
  @@index([requestCount])
  @@map("topics")
}

model TopicRequest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  // Who requested
  topicId String @map("topic_id")
  userId  String @map("user_id")

  // Request classification
  type     RequestType @default(CANDIDATE)
  cacheHit Boolean     @default(false) @map("cache_hit")

  // Engagement signals
  completionPct Float?  @map("completion_pct") // 0.0â€“1.0
  saved         Boolean @default(false)
  replayed      Boolean @default(false)
  rating        Int?                            // 1â€“5 if reviewed

  // Cost attribution
  costCents Int? @map("cost_cents")

  // Episode link (if a new episode was generated)
  episodeId String? @map("episode_id")

  // Relations
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([topicId, createdAt])
  @@index([topicId, cacheHit])
  @@map("topic_requests")
}

model SupportFlag {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  // Context
  topicId   String  @map("topic_id")
  episodeId String? @map("episode_id")

  // Issue details
  claim      String          @db.Text
  severity   SupportSeverity
  issue      String?                   // unsupported | overstated | too_specific
  suggestion String?         @db.Text  // Suggested fix
  resolved   Boolean         @default(false)
  resolvedAt DateTime?       @map("resolved_at")

  // Relations
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@index([topicId, severity])
  @@index([resolved])
  @@map("support_flags")
}

model TopicMetricDaily {
  id      String   @id @default(cuid())
  topicId String   @map("topic_id")
  day     DateTime @db.Date

  // Counters
  requests       Int @default(0)
  cacheHits      Int @default(0) @map("cache_hits")
  uniqueUsers    Int @default(0) @map("unique_users")
  completions    Int @default(0)
  saves          Int @default(0)
  totalCostCents Int @default(0) @map("total_cost_cents")

  // Relations
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([topicId, day])
  @@index([day])
  @@map("topic_metrics_daily")
}

model CanonJob {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  topicId String @map("topic_id")

  // Status
  status      CanonJobStatus @default(QUEUED)
  error       String?        @db.Text
  startedAt   DateTime?      @map("started_at")
  completedAt DateTime?      @map("completed_at")

  // Result
  episodeId String? @map("episode_id")
  costCents Int?    @map("cost_cents")

  // Relations
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@index([topicId])
  @@index([status])
  @@map("canon_jobs")
}
