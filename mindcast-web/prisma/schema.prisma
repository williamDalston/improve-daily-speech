// MindCast Database Schema
// Using Prisma with PostgreSQL (Vercel Postgres / Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // For migrations (uncomment for Vercel/Neon)
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// WEBHOOK IDEMPOTENCY
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model ProcessedWebhookEvent {
  id        String   @id // Stripe event ID
  type      String   // Event type for debugging
  createdAt DateTime @default(now()) @map("created_at")

  @@index([createdAt])
  @@map("processed_webhook_events")
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// AUTH MODELS (NextAuth)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// USER MODEL
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?   // For email/password auth
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Subscription
  stripeCustomerId     String?   @unique @map("stripe_customer_id")
  stripeSubscriptionId String?   @unique @map("stripe_subscription_id")
  stripePriceId        String?   @map("stripe_price_id")
  subscriptionStatus   String?   @map("subscription_status") // active, canceled, past_due
  subscriptionEndsAt   DateTime? @map("subscription_ends_at")

  // Usage tracking
  freeEpisodesUsed Int @default(0) @map("free_episodes_used")

  // Onboarding
  onboardingCompleted Boolean @default(false) @map("onboarding_completed")

  // Streak tracking (habit formation)
  currentStreak    Int       @default(0) @map("current_streak")
  longestStreak    Int       @default(0) @map("longest_streak")
  lastActivityDate DateTime? @map("last_activity_date")
  totalXp          Int       @default(0) @map("total_xp") // Gamification points

  // Preferences (for Daily Drop + personalization)
  interests       Json?     // Array of interest categories
  listeningMode   String?   @map("listening_mode") // "commute" or "deep_dive"
  narratorTone    String?   @map("narrator_tone") // "bbc_calm", "playful_professor", "no_fluff"
  lastDailyDrop   DateTime? @map("last_daily_drop") // When last Daily Drop was generated

  // RSS Feed (private token for podcast apps)
  feedToken       String?   @unique @map("feed_token") // Secure token for RSS feed access

  // Relations
  accounts      Account[]
  sessions      Session[]
  episodes      Episode[]
  reflects      Reflect[]
  jobs          Job[]
  playlists     Playlist[]
  topicRequests TopicRequest[]

  @@map("users")
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// EPISODE MODEL
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model Episode {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Content
  topic       String
  length      String   @default("medium") // short, medium, long
  title       String?
  transcript  String?  @db.Text
  audioUrl    String?  @map("audio_url")
  audioDurationSecs Int? @map("audio_duration_secs")
  voice       String   @default("nova") // TTS voice used: nova, alloy, echo, fable, onyx, shimmer

  // Sharing
  shareId     String?  @unique @map("share_id") // Public share ID for unauthenticated access
  isPublic    Boolean  @default(false) @map("is_public") // Whether episode is publicly shareable

  // AI Pipeline stages
  rawContent       String? @map("raw_content") @db.Text
  structuredContent String? @map("structured_content") @db.Text
  enhancedContent  String? @map("enhanced_content") @db.Text
  finalContent     String? @map("final_content") @db.Text

  // Metadata
  status    EpisodeStatus @default(DRAFT)
  wordCount Int?          @map("word_count")
  sources   Json?         // Array of source citations

  // Spaced Repetition
  lastListenedAt   DateTime? @map("last_listened_at")
  lastReviewedAt   DateTime? @map("last_reviewed_at")
  nextReviewAt     DateTime? @map("next_review_at")
  reviewCount      Int       @default(0) @map("review_count")
  reviewInterval   Int       @default(1) @map("review_interval") // Days until next review

  // Canon Protocol
  isCanon Boolean @default(false) @map("is_canon")
  topicId String? @map("topic_id")

  // Relations
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  reflects         Reflect[]
  job              Job?
  playlistEpisodes PlaylistEpisode[]
  reviews          EpisodeReview[]
  canonTopic       Topic?            @relation("EpisodeToTopic", fields: [topicId], references: [id], onDelete: SetNull)
  canonOf          Topic?            @relation("CanonEpisodeOfTopic")

  @@index([userId, createdAt])
  @@index([userId, nextReviewAt])
  @@index([topicId])
  @@map("episodes")
}

enum EpisodeStatus {
  DRAFT
  PROCESSING
  READY
  ERROR
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// JOB MODEL (Background generation - survives disconnects)
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model Job {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  episodeId String?  @unique @map("episode_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Job configuration
  topic  String
  length String @default("10 min")
  style  String? // Style lens prompt (academic, conversational, skeptical, enthusiastic)
  voice  String @default("nova") // TTS voice: nova, alloy, echo, fable, onyx, shimmer

  // Status tracking
  status       JobStatus @default(PENDING)
  currentStep  String?   @map("current_step")
  progress     Int       @default(0) // 0-100
  footprints   Json?     // Array of { timestamp, action, detail } for AI transparency
  error        String?   @db.Text

  // Timing
  startedAt   DateTime? @map("started_at")
  completedAt DateTime? @map("completed_at")

  // Canon Protocol: cost tracking
  costCents        Int?   @map("cost_cents")        // Total generation cost in cents
  minutesGenerated Float? @map("minutes_generated")  // Audio minutes produced

  // Intermediate results (survive crashes/disconnects)
  quickHook    Json?     @map("quick_hook") // { hook, preview, funFact }
  research     String?   @db.Text
  sources      Json?     // Array of parsed source citations
  draftA       String?   @map("draft_a") @db.Text
  draftB       String?   @map("draft_b") @db.Text
  selectedDraft String?  @map("selected_draft") @db.Text
  enhanced     String?   @db.Text
  finalScript  String?   @map("final_script") @db.Text
  previewAudio String?   @map("preview_audio") @db.Text // base64
  fullAudio    String?   @map("full_audio") @db.Text // base64

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode? @relation(fields: [episodeId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([status])
  @@map("jobs")
}

enum JobStatus {
  PENDING
  RESEARCH
  DRAFTING
  JUDGING
  ENHANCING
  AUDIO
  COMPLETE
  FAILED
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// CANON PROTOCOL ENUMS
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

enum TopicStatus {
  CANDIDATE // New topic, collecting signals
  CANON     // Promoted to permanent library
  COLD      // Demoted, moved to cold storage
}

enum RequestType {
  PERSONAL  // Contains PII or private context â€” never canonize
  CANDIDATE // Eligible for canon promotion
}

enum SupportSeverity {
  BLOCKER    // Factually invented, must fix
  SHOULD_FIX // Stretched beyond brief
  MINOR      // Stylistic overreach, optional
}

enum CanonJobStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

