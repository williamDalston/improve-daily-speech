// MindCast Database Schema
// Using Prisma with PostgreSQL (Vercel Postgres / Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // For migrations
}

// ══════════════════════════════════════════════════════════════════════════════
// AUTH MODELS (NextAuth)
// ══════════════════════════════════════════════════════════════════════════════

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ══════════════════════════════════════════════════════════════════════════════
// USER MODEL
// ══════════════════════════════════════════════════════════════════════════════

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Subscription
  stripeCustomerId     String?   @unique @map("stripe_customer_id")
  stripeSubscriptionId String?   @unique @map("stripe_subscription_id")
  stripePriceId        String?   @map("stripe_price_id")
  subscriptionStatus   String?   @map("subscription_status") // active, canceled, past_due
  subscriptionEndsAt   DateTime? @map("subscription_ends_at")

  // Usage tracking
  freeEpisodesUsed Int @default(0) @map("free_episodes_used")

  // Relations
  accounts Account[]
  sessions Session[]
  episodes Episode[]
  reflects Reflect[]

  @@map("users")
}

// ══════════════════════════════════════════════════════════════════════════════
// EPISODE MODEL
// ══════════════════════════════════════════════════════════════════════════════

model Episode {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Content
  topic       String
  length      String   @default("medium") // short, medium, long
  title       String?
  transcript  String?  @db.Text
  audioUrl    String?  @map("audio_url")
  audioDurationSecs Int? @map("audio_duration_secs")

  // AI Pipeline stages
  rawContent       String? @map("raw_content") @db.Text
  structuredContent String? @map("structured_content") @db.Text
  enhancedContent  String? @map("enhanced_content") @db.Text
  finalContent     String? @map("final_content") @db.Text

  // Metadata
  status    EpisodeStatus @default(DRAFT)
  wordCount Int?          @map("word_count")

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  reflects Reflect[]

  @@index([userId, createdAt])
  @@map("episodes")
}

enum EpisodeStatus {
  DRAFT
  PROCESSING
  READY
  ERROR
}

// ══════════════════════════════════════════════════════════════════════════════
// REFLECT MODEL (Sovereign Mind analysis)
// ══════════════════════════════════════════════════════════════════════════════

model Reflect {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  episodeId String   @map("episode_id")
  createdAt DateTime @default(now()) @map("created_at")

  // Analysis content
  question String  @db.Text
  analysis String  @db.Text
  lens     String  // stoic, socratic, systems, creative, shadow

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([episodeId])
  @@map("reflects")
}
